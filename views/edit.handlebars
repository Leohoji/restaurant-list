{{!-- Here is a "edit" page --}}

<form action="/restaurant/{{restaurant._id}}?_method=PUT" method="POST"
  class="container shadow p-3 mt-3 mb-5 bg-light rounded-3 w-50 border needs-validation">
  <div class="row">
    <div class="m-3 col">
      <label for="name" class="form-label">Restaurant name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter the restaurant name..."
        value="{{ restaurant.name }}" required>
    </div>

    <div class="m-3 col">
      <label for="Name_en" class="form-label">Name_en</label>
      <input type="text" class="form-control" id="Name_en" name="Name_en" placeholder="What's the English name..."
        value="{{ restaurant.name_en }}" required>
    </div>
  </div>

  <div class="m-3 col">
    <label for="category" class="form-label">Category</label>
    <input type="text" class="form-control" id="category" name="category" placeholder="What's the category..."
      value="{{ restaurant.category }}" required>
  </div>

  <div class="m-3">
    <label for="image" class="form-label">Image</label>
    <input type="text" class="form-control" id="image" name="image" placeholder="Enter the address..."
      value="{{ restaurant.image }}" required>
  </div>

  <div class="m-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" class="form-control" id="location" name="location" placeholder="Enter the location..."
      value="{{ restaurant.location }}" required>
  </div>

  <div class="m-3">
    <label for="google_map" class="form-label">Google_map</label>
    <input type="text" class="form-control" id="google_map" name="google_map" placeholder="Enter the map address..."
      value="{{ restaurant.google_map }}" required>
  </div>

  <div class="row">
    <div class="m-3 col">
      <label for="rating" class="form-label">Rating</label>
      <input type="number" class="form-control" id="rating" name="rating" min="0" step="0.1"
        value="{{ restaurant.rating }}" required>
    </div>
    <div class="m-3 col">
      <label for="phone" class="form-label">Phone</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter the phone number..."
        value="{{ restaurant.phone }}" required>
    </div>
  </div>

  <div class="m-3">
    <label for="description" class="form-label">Description</label>
    <textarea class="form-control" id="description" name="description" placeholder="Add some description..."
      required>{{ restaurant.description }}</textarea>
  </div>

  <div class="d-flex justify-content-end">
    <!-- Save -->
    <button class="btn" type="submit"><i class="fa-regular fa-floppy-disk fa-xl"></i></button>
    <!-- Back -->
    <a href="/" class="p-2"><i class="fa-solid fa-arrow-left fa-xl"></i></a>
  </div>
</form>